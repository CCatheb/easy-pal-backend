[flake8]
filename = *.py
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist
max-complexity = 20
max-line-length = 120
doctests = True
count = True
format = default
ignore =
    E133,
    E203,
    W503
select =
    E,
    W,
    F,
    C
per-file-ignores =
    __init__.py:F401,F403